<h1><%- title %></h1>

<% if (flashMessages.success) { %>
<div class="flash-success"><%= flashMessages.success %></div>
<% } %> <% if (flashMessages.error) { %>
<div class="flash-error"><%= flashMessages.error %></div>
<% } %>

<div class="add-classification">
  <form action="/inv/add-classification" method="POST">
    <label for="classification_name">Classification Name:</label>
    <input
      type="text"
      name="classification_name"
      required
      pattern="^[a-zA-Z0-9]+$"
      title="Classification name must only contain letters and numbers."
    />
    <p>
      Note: Classification name cannot contain spaces or special characters.
    </p>
    <button type="submit">Add Classification</button>
  </form>
</div>
