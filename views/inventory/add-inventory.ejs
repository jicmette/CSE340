<h1><%- title %></h1>

<% if (flashMessages.success) { %>
<div class="flash-success"><%= flashMessages.success %></div>
<% } %> <% if (flashMessages.error) { %>
<div class="flash-error"><%= flashMessages.error %></div>
<% } %>

<span>ALL FIELDS ARE REQUIRED</span>

<div class="add-inventory">
  <form action="/inv/add-inventory" method="POST">
    <label for="classification">Classification</label>
    <%- dropdown %>

    <label for="inv_make">Make:</label>
    <input
      type="text"
      name="inv_make"
      required
      minlength="3"
      placeholder="Min of 3 characters"
      title="Make must be at least 3 characters long"
    />

    <label for="inv_model">Model:</label>
    <input
      type="text"
      name="inv_model"
      required
      minlength="3"
      placeholder="Min of 3 characters"
      title="Make must be at least 3 characters long"
    />

    <label for="inv_description">Description:</label>
    <textarea name="inv_description" required></textarea>

    <label for="inv_image">Image Path:</label>
    <input
      type="text"
      name="inv_image"
      required
      placeholder="/images/vehicles/no-image.png"
    />

    <label for="inv_thumbnail">Thumbnail Path:</label>
    <input
      type="text"
      name="inv_thumbnail"
      required
      placeholder="/images/vehicles/no-image.png"
    />

    <label for="price">Price:</label>
    <input
      type="number"
      name="inv_price"
      required
      min="0"
      step="0.01"
      placeholder="decimal or integer"
    />

    <label for="inv_year">Year:</label>
    <input
      type="number"
      name="inv_year"
      required
      min="1900"
      max="2099"
      placeholder="4-digit year"
    />

    <label for="miles">Miles:</label>
    <input type="number" name="inv_miles" required min="0" />

    <label for="color">Color:</label>
    <input type="text" name="inv_color" required />

    <button type="submit">Add Vehicle</button>
  </form>
</div>
