<h1><%- title %></h1>

<span>ALL FIELDS ARE REQUIRED</span>

<div class="add-inventory">
  <form action="/inv/add-inventory" method="POST">
    <label for="classification">Classification</label>
    <%- dropdown %>

    <label for="inv_make">Make:</label>
    <input type="text" name="inv_make" required />

    <label for="inv_model">Model:</label>
    <input type="text" name="inv_model" required />

    <label for="inv_description">Description:</label>
    <textarea name="inv_description" required></textarea>

    <label for="inv_image">Image Path:</label>
    <input type="text" name="inv_image" required />

    <label for="inv_thumbnail">Thumbnail Path:</label>
    <input type="text" name="inv_thumbnail" required />

    <label for="price">Price:</label>
    <input type="number" name="price" required min="0" step="0.01" />

    <label for="inv_year">Year:</label>
    <input type="number" name="inv_year" required min="1900" max="2099" />

    <label for="miles">Miles:</label>
    <input type="number" name="miles" required min="0" />

    <label for="color">Color:</label>
    <input type="text" name="color" required />

    <button type="submit">Add Vehicle</button>
  </form>
</div>
